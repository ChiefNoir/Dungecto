<Controls:MetroWindow 
    x:Class="Dungecto.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" 
    xmlns:UI="clr-namespace:Dungecto.UI" 
    xmlns:res="clr-namespace:Dungecto.Properties"
    xmlns:common="clr-namespace:Dungecto.Common.Converters"
    EnableDWMDropShadow="True"
    WindowButtonCommandsOverlayBehavior="Always"
    BorderBrush="{DynamicResource AccentColorBrush}"
                      BorderThickness="1"
    ShowIconOnTitleBar="True"
    Title="{x:Static res:Resources.Dungecto}" Height="410.903" Width="749.422">

    <Window.Resources>
        <ResourceDictionary>
            <common:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>

    <Controls:MetroWindow.LeftWindowCommands>
        <Controls:WindowCommands>
            <Button Content="{x:Static res:Resources.Menu}" Click="ShowHideMainMenu"/>
        </Controls:WindowCommands>
    </Controls:MetroWindow.LeftWindowCommands>


    <Grid>

        <Controls:Flyout x:Name="MainMenu" Header="{x:Static res:Resources.MainMenu}" Panel.ZIndex="100"
                             Position="Left" IsOpen="False"
                             Theme="Inverse">
            <StackPanel>
                <Button Content="{x:Static res:Resources.New}" Margin="-1" Style="{DynamicResource SquareButtonStyle}" Click="CreateNewMap"/>
                <Button Content="{x:Static res:Resources.Open}" Margin="-1" Style="{DynamicResource SquareButtonStyle}" Click="OpenMap" />
                <Button Content="{x:Static res:Resources.Save}" Margin="-1" Style="{DynamicResource SquareButtonStyle}" Click="SaveMap" />
                <Button Content="{x:Static res:Resources.Export}" Margin="-1" Style="{DynamicResource SquareButtonStyle}" Click="ExportMap"/>                
                <Button Content="{x:Static res:Resources.Close}" Margin="-1" Style="{DynamicResource SquareButtonStyle}" Click="ShowHideMainMenu"/>
            </StackPanel>
        </Controls:Flyout>

        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ScrollViewer Background="Transparent" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Grid.Column="1" >
                <Border>
                    <Border.Background>
                        <ImageBrush ImageSource="Assets/Background.png"
                                        Viewport="0,0,16,16"
                                        ViewportUnits="Absolute"
                                        TileMode="Tile"
                                        Stretch="None"/>
                    </Border.Background>
                    <UI:MapCanvas x:Name="MapCanvas" AllowDrop="True" >
                        <UI:MapCanvas.ContextMenu>
                            <ContextMenu DataContext="{Binding Path=PlacementTarget, RelativeSource={RelativeSource Self}}" >
                                <MenuItem Header="{x:Static res:Resources.Remove}" 
                                              Visibility="{Binding SelectedItem, Converter={StaticResource NullToVisibilityConverter}}"
                                              Command="{Binding RemoveSelectedItemCommand}"/>
                                <MenuItem Header="{x:Static res:Resources.Info}" 
                                              Visibility="{Binding SelectedItem, Converter={StaticResource NullToVisibilityConverter}}"
                                              IsEnabled="False" />
                                <Separator Visibility="{Binding SelectedItem, Converter={StaticResource NullToVisibilityConverter}}"/>
                                <MenuItem Header="{x:Static res:Resources.MapProperties}"
                                              Click="ShowMapProperties"/>
                            </ContextMenu>
                        </UI:MapCanvas.ContextMenu>
                    </UI:MapCanvas>
                </Border>
            </ScrollViewer>

            <Expander Header="{x:Static res:Resources.Tiles}" VerticalAlignment="Top" IsExpanded="True" Height="Auto" >
                <ListView ItemsSource="{Binding Tiles}">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ListViewItem_PreviewMouseLeftButtonDown" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ContentControl Width="50" Height="50" HorizontalContentAlignment="Center" >
                                <Path Data="{Binding GeometryPath}" Fill="{Binding HexColor}" Stretch="Fill" />
                            </ContentControl>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Expander>

        </Grid>

    </Grid>

</Controls:MetroWindow>